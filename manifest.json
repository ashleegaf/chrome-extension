{
    "manifest_version": 3,
    "name": "Help Me Focus, Pomodor!",
    "version": "1.0",
    "description": "Run a Pomodoro timer in the background of focus sessions.",
    "action": {
      "default_popup": "./index.html"
    },
    "icons": {
        "16": "apple-16.png",
        "32": "apple-32.png",
        "48": "apple-48.png",
      "128": "apple-128.png"
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["./main.js"]
        }
      ]
  }